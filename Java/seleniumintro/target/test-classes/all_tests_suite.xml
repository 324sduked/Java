<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="All Pet Store Tests" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="utils.testng.listeners.TestListener"/>
        <listener class-name="utils.testng.listeners.AnnotationTransformer"/>
    </listeners>

    <test name="Negative Login Tests">
        <parameter name="browser" value="FIREFOX"/>
        <classes>
            <class name="tests.FailedLoginTests"/>
        </classes>
    </test>

    <test name="Positive Login Tests">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.CorrectLoginTests"/>
        </classes>
    </test>
    <test name="ShoppingCartTest">
        <classes>
            <class name="tests.SignOnFirstMessageTests"/>
        </classes>
    </test>

</suite>